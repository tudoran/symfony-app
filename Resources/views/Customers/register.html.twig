{% extends 'BackOfficeBundle:Default:dashboard_layout.html.twig' %}
{% block title %}IMA Login{% endblock %}

{% block breadcrumbs %}
    <ul class="breadcrumbs clearfix">
        <li><a href="#">Home</a></li>
        <li><a href="{{ path('back_office_customers') }}">Customers</a></li>
    </ul>
{% endblock %}

{% block content %}


    {%  if app.session.flashBag.has('error') %}
        <div class="ui error message">
            <i class="close icon"></i>
            <div class="header">
                Please review the following error(s):
            </div>
            <ul class="list">
                {% for error in app.session.flashbag.get('error')%}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <!-- error -->

    {#{%  if app.session.flashBag.has('success')%}#}
    {% if app.request.query.get('status') == 200  %}
        <div class="ui success message">
            <i class="close icon"></i>
            <div class="header">
                Success
            </div>
            <ul class="list">
                {#{% for success in app.session.flashbag.get('success')%}#}
                <li>Customer information has been successfully saved.</li>
                {#{% endfor %}#}
            </ul>
        </div>
    {% endif %}
    <!-- success -->

    <div class="inside">
        <div class="ui cards">
            <div class="fw card">
                <div class="content">
                    <form class="ui form" id="customerForm" action="{{ post }}" method="post">
                        <div>
                            <h4 class="ui left floated dividing header">Customer Information</h4>
                            <div class="ui right floated main menu delete">
                                <a class="popup icon item red" data-content="Delete" href="#">
                                  <i class="trash outline icon"></i>
                                </a>
                              </div>
                        </div>
                        <div class="field">
                            <label>Gender</label>
                            <div class="inline fields">
                                <div class="field">
                                    <div class="ui radio checkbox">
                                      <input name="customer_gender" class="hidden" tabindex="0" type="radio" name="gender">
                                      <label>Male</label>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="ui radio checkbox">
                                      <input name="customer_gender" class="hidden" tabindex="0" type="radio" name="gender">
                                      <label>Female</label>
                                    </div>
                                </div>
                                <!-- end field -->
                            </div>
                        </div>
                        <div class="field">
                            <label for="">Customer Name</label>
                            <div class="two fields">
                                <div class="field">
                                    <input type="text" name="customer_first_name" placeholder="First Name" value="{{ customer_first_name | default('') }}">
                                </div>

                                <div class="field">
                                    <input type="text" name="customer_last_name" placeholder="Last Name" value="{{ customer_last_name | default('') }}">
                                </div>
                            </div>
                        </div>
                        <!-- end field -->
                        <div class="row field">
                            <label for="">Customer Address</label>
                            <div class="four fields">
                                <div class="field">
                                    <input type="text" name="customer_street_address" placeholder="Street Address" value="{{ customer_street_address | default('') }}">
                                </div>
                                <div class="field">
                                    <input type="text" name="customer_zip_code" placeholder="Zip Code" value="{{ customer_zip_code | default('') }}">
                                </div>
                                <div class="field">
                                    <input type="text" name="customer_city" placeholder="City" value="{{ customer_city | default('') }}">
                                </div>
                                <div class="field">
                                    <select class="ui dropdown" name="customer_state" value="{{ customer_state | default('') }}">
                                        <option value="">State</option>
                                        <option value="AL">Alabama</option>
                                        <option value="AK">Alaska</option>
                                        <option value="AZ">Arizona</option>
                                        <option value="AR">Arkansas</option>
                                        <option value="CA">California</option>
                                        <option value="CO">Colorado</option>
                                        <option value="CT">Connecticut</option>
                                        <option value="DE">Delaware</option>
                                        <option value="FL">Florida</option>
                                        <option value="GA">Georgia</option>
                                        <option value="HI">Hawaii</option>
                                        <option value="ID">Idaho</option>
                                        <option value="IL">Illinois</option>
                                        <option value="IN">Indiana</option>
                                        <option value="IA">Iowa</option>
                                        <option value="KS">Kansas</option>
                                        <option value="KY">Kentucky</option>
                                        <option value="LA">Louisiana</option>
                                        <option value="ME">Maine</option>
                                        <option value="MD">Maryland</option>
                                        <option value="MA">Massachusetts</option>
                                        <option value="MI">Michigan</option>
                                        <option value="MN">Minnesota</option>
                                        <option value="MS">Mississippi</option>
                                        <option value="MO">Missouri</option>
                                        <option value="MT">Montana</option>
                                        <option value="NE">Nebraska</option>
                                        <option value="NV">Nevada</option>
                                        <option value="NH">New Hampshire</option>
                                        <option value="NJ">New Jersey</option>
                                        <option value="NM">New Mexico</option>
                                        <option value="NY">New York</option>
                                        <option value="NC">North Carolina</option>
                                        <option value="ND">North Dakota</option>
                                        <option value="OH">Ohio</option>
                                        <option value="OK">Oklahoma</option>
                                        <option value="OR">Oregon</option>
                                        <option value="PA">Pennsylvania</option>
                                        <option value="RI">Rhode Island</option>
                                        <option value="SC">South Carolina</option>
                                        <option value="SD">South Dakota</option>
                                        <option value="TN">Tennessee</option>
                                        <option value="TX">Texas</option>
                                        <option value="UT">Utah</option>
                                        <option value="VT">Vermont</option>
                                        <option value="VA">Virginia</option>
                                        <option value="WA">Washington</option>
                                        <option value="WV">West Virginia</option>
                                        <option value="WI">Wisconsin</option>
                                        <option value="WY">Wyoming</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- end field -->
                        <div class="field">
                            <div class="two fields">
                                <div class="field">
                                    <label>Contact</label>
                                    <input type="text" name="customer_email" placeholder="Email" value="{{ customer_email | default('') }}">
                                </div>
                                <div class="field">
                                    <label>Phone</label>
                                    <input type="text" name="customer_phone" placeholder="Phone" value="{{ customer_phone | default('') }}">
                                </div>
                            </div>
                        </div>
                        <!-- end field -->
                        <div class="field">
                            <label>Birthday</label>
                            <div class="three fields">
                                <div class="field">
                                    <select class="ui dropdown" name="customer_birth_month" value="{{ "customer_birth_month" | default('') }}">
                                       <option value="01">January</option>
                                        <option value="02">February</option>
                                        <option value="03">March</option>
                                        <option value="04">April</option>
                                        <option value="05">May</option>
                                        <option value="06">June</option>
                                        <option value="07">July</option>
                                        <option value="08">August</option>
                                        <option value="09">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                                <div class="field" >
                                    <input type="text" placeholder="Day" name="customer_birth_date" value="{{ customer_birth_date | default('') }}">
                                </div>
                                <div class="field">
                                    <input type="text" placeholder="Year" name="customer_birth_year" value="{{ customer_birth_year | default('') }}">
                                </div>
                            </div>
                        </div>
                        <!-- end field -->
                         <div class="inline field">
                            <div class="ui checkbox">
                              <input class="hidden" tabindex="0" type="checkbox" name="customer_subscribed_newsletter" value="{{ customer_subscribed_newsletter | default('') }}">
                              <label>Yes! Send Daily coupons, freebires, and deals right to my inbox</label>
                            </div>
                        </div>
                        <!-- end field -->
                    </form>
                </div>
                <!-- end content -->
                <div class="extra content">
                    <div class="ui buttons">
                        <button class="ui button" onclick="resetCustomer()">Cancel</button>
                        <div class="or"></div>
                        <button class="ui positive button" onclick="submitCustomer()">Save</button>
                    </div>
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end cards -->
    </div>
    <!-- end inside -->

    <script type="text/javascript">
        function submitCustomer() {
            document.getElementById('customerForm').submit();
        }

        function resetCustomer() {
            document.location.href  ='{{ path('back_office_customers') }}';
        }
    </script>


{% endblock %}